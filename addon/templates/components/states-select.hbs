{{#x-select value=value on-blur=(action "blur") class=class action="selected"  as |xs|}}
{{xs.option}}
{{#each stateList as |state|}}
  {{#xs.option value=state.code}}
    {{#if onlyDisplayStateCode}}
      {{state.code}}
    {{else}}
      {{state.name}}
    {{/if}}
  {{/xs.option}}
{{/each}}
{{/x-select}}
